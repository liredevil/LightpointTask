@model IEnumerable<LightpointTask.Models.ShopViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Home</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeWorkFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeWorkTo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeWorkFrom.TimeOfDay)
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeWorkTo.TimeOfDay)
        </td>
        <td>
            @Html.ActionLink("show all products", "ShowProductShop", new { id=item.Id })
        </td>
    </tr>
}
</table>
<div class="btn-group">
    @Html.ActionLink("List of stores", "Index", "Shop", null, new { @class = "btn btn-info" })
    @Html.ActionLink("List of products", "Index", "Product", null, new { @class = "btn btn-info" })
</div>
